<style>table{width: 400px} .left, .right{border: 2px solid black; width: 450px; margin: 10px; padding: 10px; vertical-align: top; display: inline-block;}</style>
<h3><a href="/sessions" data-method='delete'>Logout</a></h3>
<h3><a href="/events">Back</a></h3>

<div class='left'>
<h3><%= @event.name%></h3>
<h3><%= @event.date %></h3>
<h4><%= @event.location %></h4>

<h4>People who are joining the event: </h4>

<table border='1'>
	<tr>
		<th>Name</th>
		<th>Location</th>
		<th>State</th>
	</tr>
	<tr>
		<td><%= @event.user.first_name%></td>
		<td><%= @event.location %></td>
		<td><%= @event.location %></td>
	</tr>
</table> 
</div>

<div class='right'>
	<form action='/comments' method='post'>
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<h3>Discussion about this event</h3>
	<p>Add Comment</p>
	<textarea name='comment[comment]'></textarea>
	<p><input type='submit' value='Submit comment'></p>
	</form>

</div>

